{
  "name": "guardz-generator",
  "version": "1.1.1",
  "description": "Generate TypeScript type guards using guardz library",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "guardz-generator": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "npx jest",
    "dev": "ts-node src/cli.ts",
    "lint": "eslint src/ --ext .ts",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "verify": "npm run type-check && npm run lint",
    "verify:generated": "npm run type-check && npm run lint && tsc --noEmit test/**/*.ts",
    "guardz-generator": "node dist/cli.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thiennp/guardz.git"
  },
  "keywords": [
    "typescript",
    "type",
    "guard",
    "typeguard",
    "generator",
    "codegen",
    "guardz"
  ],
  "author": "Thien Nguyen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thiennp/guardz/issues"
  },
  "homepage": "https://github.com/thiennp/guardz#readme",
  "dependencies": {
    "commander": "^11.0.0",
    "glob": "^10.0.0",
    "guardz": "^1.0.1",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "jest": "^29.0.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.0"
  },
  "files": [
    "dist"
  ]
}
